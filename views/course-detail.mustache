<!DOCTYPE html>
<html lang="ru">
<head>
    <title>Проект Best Courses Ever</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="description" content="Best Courses Ever">
    <meta name="keywords" content="Best Courses Ever">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/owl.carousel.css">
    <link rel="stylesheet" href="/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

<!-- MENU -->
<section class="navbar custom-navbar navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span>
            </button>

            <!-- lOGO TEXT HERE -->
            <a href="/" class="navbar-brand">Best Courses Ever</a>
        </div>
        <!-- MENU LINKS -->
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-nav-first">
                <li><a href="/#top" class="smoothScroll">Главная</a></li>
                <li><a href="/#about" class="smoothScroll">О нас</a></li>
                <li><a href="/#team" class="smoothScroll">Наши авторы</a></li>
                <li><a href="/courses" class="smoothScroll">Курсы</a></li>
                <li><a href="/#testimonial" class="smoothScroll">Отзывы</a></li>
                <li><a href="/#contact" class="smoothScroll">Контакты</a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><i class="fa fa-phone"></i> +77777777</a></li>
                <li class="user-profile-btn" id="user-profile-btn"><a href="/users/profile"><i class="fa fa-user" aria-hidden="true"></i></a></li>
                <li class="log-out-btn" id="log-out-btn"><a href="/users/logout"><i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
            </ul>
        </div>
    </div>
</section>

<div class="container course-detail-wrapper">

    <h1 class="courses-title-detail">{{course.title}}</h1>
    <p class="courses-desc-detail">{{course.description}}</p>
    <div class="courses-info-detail">
        <div class="courses-author">
            <img src="/images/avatar.jpg" class="img-responsive" alt="">
            <span>{{course.authorFirstName}} {{course.authorLastName}}</span>
        </div>
        {{#course.price}}
            <div class="courses-price">
               <span>USD {{course.price}}</span>
            </div>
        {{/course.price}}
        {{^course.price}}
            <div class="courses-price free">
                <a href="/courses/{{course._id}}"><span>Free</span></a>
            </div>
        {{/course.price}}
    </div>
    <div class="courses-date-detail">
        <span><i class="fa fa-calendar"></i> 12 / 7 / 2018</span>
        <span><i class="fa fa-clock-o"></i> {{course.duration}} Hours</span>
    </div>

    <div class="courses-page-detail-wrapper">
        <div class="col-12">
            <div class="item">
                <div class="courses-image">
                    <img src="/images/course-image.jpg" class="img-responsive" alt="">
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="item">
                <div class="lessons-link">
                    <a href="/lessons/course/{{course._id}}" data-id="{{course._id}}" class="section-btn btn btn-default courses-btn form-control" id="lessons-btn">Смотреть все уроки</a>
                </div>
            </div>
        </div>

        {{#author}}
            <div class="col-12">
                <div class="item">
                    <div class="lessons-link">
                        <a href="/lessons/create/{{course._id}}" data-id="{{course._id}}" class="section-btn btn btn-default courses-btn form-control" id="create-lesson-btn">Создать новый урок</a>
                    </div>
                </div>
            </div>
        {{/author}}
        {{^author}}
            <div></div>
        {{/author}}

    </div>
</div>

{{> footer }}




<!-- SCRIPTS -->
<script src="/js/axios.min.js"></script>
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/owl.carousel.min.js"></script>
<script src="/js/smoothscroll.js"></script>
<script src="/js/custom.js"></script>
<script src="/js/script.js"></script>
<script src="/js/check-cookie.js"></script>
</body>
</html>