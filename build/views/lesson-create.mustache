<section id="profile">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <form id="lesson-form" role="form" action="/lessons" method="post" enctype="multipart/form-data">
                    <div class="section-title">
                        <h2 class="profile-title-detail">Создать урок</h2>
                    </div>

                    <div class="col-md-12 col-sm-12">
                        <input type="text" class="form-control" placeholder="Название" name="title" required="">
                        <textarea class="form-control" rows="6" placeholder="Краткое описание" name="description"
                                  required=""></textarea>
                        <input type="text" class="form-control visually-hidden" name="authorId" value="{{authorId}}">
                        <input type="text" class="form-control visually-hidden" name="courseId" value="{{courseId}}">
                        <label for="video">
                            Добавить видео
                        </label>
                        <input type="file" name="video" id="video" class="form-control" accept=".mp4, .avi, .mkv, .mov" required=""/>

                        <label for="text">
                            Добавить текстовый файл
                        </label>
                        <input type="file" name="text" id="text" class="form-control" accept=".doc, .docx, .txt, .pdf, .rtf"/>
                    </div>

                    <div class="col-md-4 col-sm-12">
                        <input type="submit" class="form-control" name="send message" value="Создать">
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

