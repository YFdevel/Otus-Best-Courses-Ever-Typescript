    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span>
            </button>

            <!-- lOGO TEXT HERE -->
            <a href="/" class="navbar-brand">Best Courses Ever</a>
        </div>
        <!-- MENU LINKS -->
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-nav-first">
                <li><a href="/#top" class="smoothScroll">Главная</a></li>
                <li><a href="/#about" class="smoothScroll">О нас</a></li>
                <li><a href="/#team" class="smoothScroll">Наши авторы</a></li>
                <li><a href="/#courses" class="smoothScroll">Курсы</a></li>
                <li><a href="/#testimonial" class="smoothScroll">Отзывы</a></li>
                <li><a href="/#contact" class="smoothScroll">Контакты</a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><i class="fa fa-phone"></i> +77777777</a></li>
