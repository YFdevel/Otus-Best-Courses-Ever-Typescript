{{> promo }}
{{> feature }}
{{> about }}
{{> team }}
<div class="visually-hidden">{{noAuth}}</div>
<!-- Courses -->
<section id="courses">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-sm-12">
                <div class="section-title">
                    <h2>Популярные курсы <small>Улучши свои знания и навыки</small></h2>
                </div>

                <div class="owl-carousel owl-theme owl-courses">
                    {{#list}}
                        <div class="col-md-4 col-sm-4">
                            <div class="item">
                                <div class="courses-thumb">
                                    <div class="courses-top">
                                        <a href="/courses/{{_id}}" class="course-item-link">
                                            <div class="courses-image">
                                                <img src="/images/course-image.jpg" class="img-responsive" alt="">
                                            </div>
                                        </a>
                                        <div class="courses-date">
                                            <span><i class="fa fa-calendar"></i> 12 / 7 / 2018</span>
                                            <span><i class="fa fa-clock-o"></i> 7 Hours</span>
                                        </div>
                                    </div>

                                    <div class="courses-detail">
                                        <h3><a href="/courses/{{_id}}">{{title}}</a></h3>
                                        <p>{{description}}</p>
                                    </div>

                                    <div class="courses-info">
                                        <div class="courses-author">
                                            <img src="/images/avatar.jpg" class="img-responsive" alt="">
                                            <span>{{authorFirstName}} {{authorLastName}}</span>
                                        </div>
                                        {{#price}}
                                            <div class="courses-price">
                                                <a href="/courses/{{_id}}"><span>USD {{price}}</span></a>
                                            </div>
                                        {{/price}}
                                        {{^price}}
                                            <div class="courses-price free">
                                                <a href="/courses/{{_id}}"><span>Free</span></a>
                                            </div>
                                        {{/price}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/list}}
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-12">
                <a href="/courses" class="section-btn btn btn-default courses-btn form-control" id="courses-btn">Смотреть все</a>
            </div>
        </div>
    </div>
</section>
{{> reviews }}
